nextflow_workflow {

    name "Test Subworkflow VPTUPDATEMETA"
    script "../main.nf"
    workflow "VPTUPDATEMETA"

    tag "subworkflows"
    tag "subworkflows/vptupdatemeta"

    tag "vizgenpostprocessing/deriveentitymetadata"
    tag "vizgenpostprocessing/partitiontranscripts"
    tag "vizgenpostprocessing/updatevzg"

    test("merscope - parquet, csv, vzg") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id:'test' ],
                    file('${projectDir}/tests/data/cellpose2_micron_space.parquet')
                ])
                input[1] = file('${projectDir}/tests/data/minimal_data/detected_transcripts.csv')
                input[2] = Channel.value(false) // Do not update vzg
                input[3] = file("dummy.vzg", checkIfExists: false) // Dummy vzg file
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}
