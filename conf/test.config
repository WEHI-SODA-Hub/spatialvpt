/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run WEHI-SODA-Hub/spatialvpt -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    sample                     = "minimal_data"
    algorithm_json             = "data/minimal/cellpose2_nuclei.json"
    images_dir                 = "data/minimal/images"
    images_regex               = "mosaic_(?P<stain>[\\w|-]+)_z(?P<z>[0-9]+).tif"
    um_to_mosaic_file          = "data/minimal/images/micron_to_mosaic_pixel_transform.csv"
    detected_transcripts       = "data/minimal/detected_transcripts.csv"
    input_vzg                  = "dummy.vzg"
    outdir                     = "results"
    tile_size                  = 240
    tile_overlap               = 20
    update_vzg                 = false
    report_only                = false
    z_index                    = 3
    transcript_count_threshold = 0
    volume_filter_threshold    = 0
}
